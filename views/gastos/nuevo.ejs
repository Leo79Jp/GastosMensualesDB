<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head') %> 
    <title>Nuevo Gasto - Control de Gastos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <%- include('../partials/navbar') %>

    <main class="container py-4 flex-grow-1">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <i class="bi bi-cash-coin text-primary display-4"></i>
                            <h2 class="fw-bold">Registrar Movimiento</h2>
                            <p class="text-muted">Anota tus gastos fijos o variables del dÃ­a</p>
                        </div>

                        <form action="/gastos/guardar" method="POST">
                            <div class="mb-3">
                                <label for="categoria_id" class="form-label fw-semibold">Â¿QuÃ© gastaste?</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                    <select name="categoria_id" id="categoria_id" class="form-select" required>
                                        <option value="" disabled selected>Elige una categorÃ­a...</option>
                                        
                                        <optgroup label="ðŸ“Œ GASTOS FIJOS (Servicios/Abonos)" class="bg-light-blue">
                                            <% categorias.filter(cat => cat.es_fijo).forEach(cat => { %>
                                                <option value="<%= cat.id %>" class="opt-fijo">
                                                    <%= cat.nombre %>
                                                </option>
                                            <% }) %>
                                        </optgroup>

                                        <optgroup label="ðŸ›ï¸ GASTOS VARIABLES (Consumo diario)" class="bg-light-yellow">
                                            <% categorias.filter(cat => !cat.es_fijo).forEach(cat => { %>
                                                <option value="<%= cat.id %>" class="opt-variable">
                                                    <%= cat.nombre %>
                                                </option>
                                            <% }) %>
                                        </optgroup>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="monto" class="form-label fw-semibold">Monto ($)</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" step="0.01" name="monto" id="monto" class="form-control form-control-lg" placeholder="0.00" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="fecha" class="form-label fw-semibold">Fecha</label>
                                <input type="date" name="fecha" id="fecha" class="form-control" value="<%= new Date().toISOString().split('T')[0] %>" required>
                            </div>

                            <div class="mb-4">
                                <label for="comentario" class="form-label fw-semibold">Nota adicional</label>
                                <textarea name="comentario" id="comentario" class="form-control" rows="2" placeholder="Ej: Compra mensual de carne"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg rounded-3">Guardar Gasto</button>
                                <a href="/" class="btn btn-light">Volver al inicio</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>